{
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/auth/?$", "dest": "/auth.html" },
    { "src": "^/dashboard/?$", "dest": "/01-pages/01-dashboard.html" },
    { "src": "^/products/?$", "dest": "/01-pages/02-products.html" },
    { "src": "^/products-calendar/?$", "dest": "/01-pages/03-products-calendar.html" },
    { "src": "^/delivery/?$", "dest": "/01-pages/04-delivery-calendar.html" },
    { "src": "^/orders/?$", "dest": "/01-pages/05-orders.html" },
    { "src": "^/services/?$", "dest": "/01-pages/06-services.html" },
    { "src": "^/notice/?$", "dest": "/01-pages/07-notice.html" },
    { "src": "^/css/(.*)", "dest": "/02-assets/01-css/$1" },
    { "src": "^/js/(.*)", "dest": "/02-assets/02-js/$1" },
    { "src": "^/components/(.*)", "dest": "/02-assets/03-components/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
